@model WebApplication5.Models.Agent

@{
    ViewBag.Title = "Details";
}

<h2>Details about agent</h2>

<div>

    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.LabelFor(model => model.FirstName, "First Name")
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Department.DepartmentName)
        </dd>
        <br />
        <br />

        <dt>
            @Html.DisplayNameFor(model => model.Assignments)
        </dt>
        <dd>
            <table class="table">
                <tr>
                    <th>Tickets assigned</th>
                    <th>Tickets pending</th>
                    <th>Tickets solved</th>
                </tr>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TicketsAssigned)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TicketsPending)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => Model.TicketsSolved)
                    </td>
                </tr>

            </table>
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.AgentID }) |
